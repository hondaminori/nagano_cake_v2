<%= form_with model: @genre, url: admin_genres_path do |f| %>
  <div class="form-group">
    <label for="genre_name">ジャンル名</label>
    <%= f.text_field :name, class: 'form-control genre_name' %>
  </div>
  <%= f.submit '新規登録' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>ジャンル名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td>ボタン</td>
      </tr>
    <% end %>
  </tbody>
</table>